<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sceen.MainActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:layout_weight="1"
        android:background="#f000"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="Danh Sách Khách Hàng"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="#FFBF00"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imgThem"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/add1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bộ Lọc :"
            android:textSize="20dp"
            android:textColor="#f000"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edtTen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên khách hàng"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="#FFBF00"
            android:background="@drawable/customedt"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/customedt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/txtNam"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nam"
            android:gravity="center"
            android:textColor="#f000"

            />
        <TextView
            android:id="@+id/txtNu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nữ"
            android:gravity="center"
            android:textColor="#f000"/>

    </LinearLayout>
    <EditText
        android:id="@+id/edtSoDienThoai"
        android:background="@drawable/customedt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập vào 3 số cuối số điện thoại"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyKhachHang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginTop="20dp"/>
</LinearLayout>